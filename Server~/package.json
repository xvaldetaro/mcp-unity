    "@types/uuid": "^10.0.0",
    "@types/winreg": "^1.2.36",
    "@types/ws": "^8.18.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "uuid": "^11.1.0",
    "winreg": "^1.2.5",
    "ws": "^8.18.1",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.3"
  }
